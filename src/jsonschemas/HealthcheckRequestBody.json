          "type": "number"
        },
        "rawCurrentLoadSystem": {
          "type": "number"
        },
        "rawCurrentLoadNice": {
          "type": "number"
        },
        "rawCurrentLoadIdle": {
          "type": "number"
        },
        "rawCurrentLoadIrq": {
          "type": "number"
        },
        "cpus": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Systeminformation.CurrentLoadCpuData"

        "avgLoad": {
          "type": "number"
        },
        "currentLoad": {
          "type": "number"
        },
        "currentLoadUser": {
          "type": "number"
        },
        "currentLoadSystem": {
          "type": "number"
        },
        "currentLoadNice": {
          "type": "number"
        },
        "currentLoadIdle": {
          "type": "number"
        },
        "currentLoadIrq": {
          "type": "number"

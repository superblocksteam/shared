{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/CreateApplication",
  "definitions": {
    "CreateApplication": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "string",
          "enum": [
            "staging",
            "production"
          ]
        },
        "name": {
          "type": "string"
        },
        "organizationId": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "isPublic": {
          "type": "boolean"
        },
        "folderId": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "organizationId",
        "color",
        "icon"
      ],
      "additionalProperties": false
    }
  }
}